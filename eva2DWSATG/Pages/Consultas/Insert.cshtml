@page
@model eva2DWSATG.Pages.Consultas.InsertModel
@{
}


<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="body">
    <h2 style="text-align:center">Registrar un nuevo alumno</h2>
    <form method="post" id="myForm">
        <div class="letters">
            <br /><br />

            <div class="form-group row">
                <div class="col-sm-4 col-form-label"></div>
                <div class="col-sm-4 col-form-label">Código alumno</div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 col-form-label"></div>
                <div class="col-sm-4">
                    <input class="form-control" id="codAlum" name="codAlum" placeholder="RHY89" required>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-4 col-form-label"></div>
                <div class="col-sm-4 col-form-label">Nota Evaulación</div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 col-form-label"></div>
                <div class="col-sm-4">
                    <input class="form-control" type="number" id="NotaEv" name="NotaEv" placeholder="6" required>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-4 col-form-label"></div>
                <div class="col-sm-4 col-form-label">Código Evaulación</div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 col-form-label"></div>
                <div class="col-sm-4">
                    <select class="form-control" id="codEV" name="codEV" required>
                        <option>PR</option>
                        <option>SG</option>
                        <option>TC</option>
                    </select>
                </div>
            </div>

            <br />
            <div class="form-group row">
                <label class="col-sm-4 col-form-label"></label>
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-primary" onclick="verificarNota()"  asp-page-handler="Submit">Guardar</button>
                </div>
            </div>

        </div>
    </form>
</body>

<script>
    function verificarNota() {

        //Obtengo el valor del campo nota
        nota = document.getElementById('NotaEv').value;

        //Miro si la contraseña cumple los requisitos
        if (nota<0 || nota>10) {

            //Mensage de error
            alert("La nota debe estar en el rango 0-10");

            //Reseteo el campo
            nota.value = 0;
            //Muevo el cursor al campo
            nota.focus();
           
        }
     }
</script>
